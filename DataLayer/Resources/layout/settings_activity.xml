<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#181818"
          android:theme="@android:style/Theme.Holo.NoActionBar"
          >
  <TextView
        android:id="@+id/SettingsTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="56px"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
    />

    <Button
        android:id="@+id/PurgeAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purge data"
        android:onClick="onPurgeAllData"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SettingsTitleText"
    />

    <Button
      android:id="@+id/PurgeHeartBeatButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Purge Heart Beat data"    
      android:onClick="onPurgeHeartBeatData"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/PurgeAllButton"
    />

    <Button
      android:id="@+id/PurgeHeartRateButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Purge Heart Rate data"
      android:onClick="onPurgeHeartRateData"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/PurgeHeartBeatButton"
    />

    <Button
      android:id="@+id/PurgeStepsButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Purge Steps data"
      android:onClick="onPurgeStepsData"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/PurgeHeartRateButton"
    />


    <Button
        android:id="@+id/SettingsBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBackClicked"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Back"
    />
</RelativeLayout>
